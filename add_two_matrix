#include <stdio.h>

int main()
{
    int a[100][100],b[100][100],m,n,i,j,e,f,c[100][100];
    printf("enter the elements of rows: ");
    scanf("%d",&m);
    printf("enter the elements of columns:");
    scanf("%d",&n);
    for(i=0;i<m;i++){
        for(j=0;j<n;j++){
            printf("elements of a[%d][%d]:",i,j);
            scanf("%d",&a[i][j]);
        }
    }
     for(i=0;i<m;i++){
        for(j=0;j<n;j++){
            printf("elements of b[%d][%d]:",i,j);
            scanf("%d",&b[i][j]);
        }  
     }
     for(i=0;i<m;i++){
        for(j=0;j<n;j++){
            c[i][j]=a[i][j]+b[i][j];
                    
        }
     }
     for(i=0;i<m;i++){
        for(j=0;j<n;j++){
            printf("sum is:%d\n",c[i][j]);
            
        }
        printf("\n");
     }
    return 0;
}
